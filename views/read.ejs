<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <div class="nav mb-10">
        <a class="text-blue-500 text-2xl" href="/"
          ><i class="ri-home-fill"></i
        ></a>
      </div>
      <h1 class="text-3xl tracking-tigher mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length > 0) {%> <% users.forEach(function(user) { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 overflow-hidden rounded-lg bg-red-500">
            <img
              class="w-full h-full object-cover"
              src="<%= user.imgURL %>"
              alt=""
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tigher"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex justify-between mt-10">
            <a class="text-zinc-300" href="/edit/<%= user._id%>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <%}) %> <%} else { %>
        <h3 class="text-zinc-500">No users are added yet.</h3>
        <%} %>
      </div>
    </div>
  </body>
</html>
